<div class="panel panel-default">
  <div class="panel-heading">
    Create a League Participation Location
  </div>
  <div class="panel-body">
    <div class="container">

      <%= form_for @location do |f| %>

        <div class="row">

          <div class="col-md-4">
            <div class="form-group">
              <label>Rink Name</label>
              <%= f.text_field :location_name, placeholder: "Rink Name, like DSC B Rink", class: "form-control" %>
            </div>
          </div>

          <div class="col-md-4 select">
            <div class="form-group">
              <label>Location Type</label>
              <%= f.select :location_type, [["Ice Rink", "Ice Rink"], ["Bar", "Bar"]], prompt: "Select...", class: "form-control" %>
            </div>
          </div>

          
        </div>

        <div><%= f.submit "Create a Location", class: "btn btn-normal" %></div>

      <% end %>

    </div>
  </div>
</div>
